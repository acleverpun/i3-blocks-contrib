#!/usr/bin/env bash

################################
# Shows AUR packages that need updated.
#
# Dependencies:
# - checkupdates
# - yaourt
################################

full=""
short=""
color=""
status=0


arch=$(checkupdates | wc -l)
archAndAur=$(yaourt -Qua | wc -l)
aur=$(echo "$aurToo - $arch" | bc)

if [ $aur -ne 0 ]; then
    full=$aur
    short=$full
fi


echo $full
echo $short
echo $color
exit $status
