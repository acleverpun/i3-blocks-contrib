#!/usr/bin/env bash

################################
# Shows pacman packages that need updated.
#
# Dependencies:
# - checkupdates
# - notify-send
################################

full=""
short=""
color=""
status=0


getNum() {
	if [[ $1 == "" ]]; then
		echo 0
	else
		echo "$1" | wc -l
	fi
}


packages=$(checkupdates)
numPackages=$(getNum "$packages")

full=$numPackages
short=$full


echo $full
echo $short
echo $color


case $BLOCK_BUTTON in

	# right click: show packages
	3) notify-send "Pacman packages" "$packages" ;;

esac


exit $status
